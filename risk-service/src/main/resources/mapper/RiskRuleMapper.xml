<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bankcore.risk.repository.RiskRuleMapper">
    <select id="findEnabled" resultType="com.bankcore.risk.model.RiskRule">
        SELECT id,
               name,
               type,
               expression,
               threshold,
               enabled,
               created_at
        FROM risk_rules
        WHERE enabled = 1
        ORDER BY id ASC
    </select>
</mapper>
